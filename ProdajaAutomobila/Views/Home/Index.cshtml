@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}

<div style="background-image: url('/images/background.png'); background-size: cover; background-position: center; background-repeat: no-repeat; background-color: #08618d;">
    <div class="container text-white py-5">
        <div class="row align-items-center g-5">
            <div class="col-md-6" style="padding-top: 100px;">
                <h1 class="mb-4 display-2"><strong>Prodaja automobila</strong></h1>
                <p style="margin-top: 20px;">
                    Pronađite veliki izbor novih i polovnih automobila na našem sajtu.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="bg-light">
    <div class="container py-4">
        <h2 class="pb-4 text-center">Najnovija vozila</h2>

        <div class="row mb-5 g-3">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="rounded border shadow p-3 text-center h-100">
                        <img src="/products/@product.ImageFileName" class="img-fluid" alt="..."
                             style="height: 180px; object-fit: contain" />
                        <hr />
                        <h5 class="py-2">@product.Name</h5>
                        <p>
                            Brand: @product.Brand, Category: @product.Category
                        </p>
                        <h4 class="mb-3">@(product.Price)KM</h4>
                        <a class="btn btn-primary btn-sm mb-2" asp-controller="Store"
                           asp-action="Details" asp-route-id="@product.Id" role="button">Detalji</a>
                        <button type="button" class="btn btn-warning btn-sm mb-2" onclick="addToCart(this, @product.Id)">
                            Dodaj u korpu <i class="bi bi-cart4"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
